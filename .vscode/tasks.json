{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build project",
      "command": "g++",
      "args": [
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/utils/load_shaders.cpp",
        "-o",
        "${workspaceFolder}/build/out",
        "-lglfw",
        "-lGLEW",
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}
